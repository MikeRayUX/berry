<li class="my-6">
  <%= helpers.link_to_page post, class: "font-semibold text-xl cursor-pointer underline decoration-wavy underline-offset-4" do %>
    <h3><%= title %></h3>
  <% end %>
  <div class="italic mt-2 flex align-middle items-center text-slate-300 text-sm mb-2">
    <%= helpers.inline_svg_tag "calendar.svg", class: "fill-slate-300 w-4 h-4 mr-2 inline-block" %>
    <%= published_at %>
  </div>
  <p><%= tldr %></p>
</li>
